<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="cgeorgilakis@grnet.gr" id="openid-federation">
    	<createTable tableName="OPENID_FEDERATION">
             <column name="INTERNAL_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="REALM_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="TRUST_ANCHOR" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="OPENID_FEDERATION_ATTRIBUTE">
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="VALUE" type="longvarchar"/>
            <column name="OPENID_FEDERATION_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="INTERNAL_ID" constraintName="OPENID_FEDERATION_PK" tableName="OPENID_FEDERATION"/>
        <addForeignKeyConstraint baseColumnNames="REALM_ID" baseTableName="OPENID_FEDERATION" constraintName="REALM_OPENID_FEDERATION_KEY" referencedColumnNames="ID" referencedTableName="REALM" />
        <addUniqueConstraint columnNames="REALM_ID,TRUST_ANCHOR" constraintName="OPENID_FEDERATION_UNIQUE" tableName="OPENID_FEDERATION"/>
        <addPrimaryKey columnNames="NAME, OPENID_FEDERATION_ID" constraintName="OPENID_FEDERATION_ATTRIBUTE_PK" tableName="OPENID_FEDERATION_ATTRIBUTE"/>
        <addForeignKeyConstraint baseColumnNames="OPENID_FEDERATION_ID" baseTableName="OPENID_FEDERATION_ATTRIBUTE" constraintName="OPENID_FEDERATION_ATTRIBUTE_FK" referencedColumnNames="INTERNAL_ID" referencedTableName="OPENID_FEDERATION"/>
    </changeSet>

</databaseChangeLog>
