<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="cgeorgilakis@grnet.gr" id="federation-indexes">

        <createIndex indexName="FEDERATION_REALM_INDEX" tableName="FEDERATION">
            <column name="REALM_ID" type="VARCHAR(36)"/>
        </createIndex>

        <createIndex indexName="FEDERATION_CONFIG_INDEX" tableName="FEDERATION_CONFIG">
            <column name="FEDERATION_ID" type="VARCHAR(36)"/>
            <column name="NAME" type="VARCHAR(255)"/>
        </createIndex>

        <createIndex indexName="FEDERATION_MAPPER_INDEX" tableName="FEDERATION_MAPPER">
            <column name="FEDERATION_ID" type="VARCHAR(36)"/>
        </createIndex>

        <createIndex indexName="FEDERATION_MAPPER_CONFIG_INDEX" tableName="FEDERATION_MAPPER_CONFIG">
            <column name="FEDERATION_MAPPER_ID" type="VARCHAR(36)"/>
            <column name="NAME" type="VARCHAR(255)"/>
        </createIndex>

        <createIndex indexName="IDP_CONFIG_INDEX" tableName="IDENTITY_PROVIDER_CONFIG">
            <column name="IDENTITY_PROVIDER_ID" type="VARCHAR(36)"/>
            <column name="NAME" type="VARCHAR(255)"/>
        </createIndex>

        <createIndex indexName="IDP_MAPPER_CONFIG_INDEX" tableName="IDP_MAPPER_CONFIG">
            <column name="IDP_MAPPER_ID" type="VARCHAR(36)"/>
            <column name="NAME" type="VARCHAR(255)"/>
        </createIndex>

    </changeSet>

    <changeSet author="laskarisn@grnet.gr" id="federation-indexes-2">

        <dropIndex indexName="FEDERATION_CONFIG_INDEX" tableName="FEDERATION_CONFIG"/>
        <dropIndex indexName="FEDERATION_MAPPER_CONFIG_INDEX" tableName="FEDERATION_MAPPER_CONFIG"/>
        <dropIndex indexName="IDP_CONFIG_INDEX" tableName="IDENTITY_PROVIDER_CONFIG"/>
        <dropIndex indexName="IDP_MAPPER_CONFIG_INDEX" tableName="IDP_MAPPER_CONFIG"/>


        <createIndex indexName="IDP_MAPPER_CONFIG_IDX_IDP_MAPPER_ID" tableName="IDP_MAPPER_CONFIG">
            <column name="IDP_MAPPER_ID" type="VARCHAR(36)"/>
        </createIndex>

        <createIndex indexName="IDENTITY_PROVIDER_CONFIG_IDX_IDPID" tableName="IDENTITY_PROVIDER_CONFIG">
            <column name="IDENTITY_PROVIDER_ID" type="VARCHAR(36)"/>
        </createIndex>

        <createIndex indexName="FEDERATION_IDX_ALIAS" tableName="FEDERATION">
            <column name="ALIAS" type="VARCHAR(255)"/>
        </createIndex>

        <createIndex indexName="FEDERATION_CONFIG_IDX_FED_ID" tableName="FEDERATION_CONFIG">
            <column name="FEDERATION_ID" type="VARCHAR(36)"/>
        </createIndex>

        <createIndex indexName="ENTITY_CATEGORY_ALLOWLIST_IDX_FED_ID" tableName="ENTITY_CATEGORY_ALLOWLIST">
            <column name="FEDERATION_ID" type="VARCHAR(36)"/>
        </createIndex>

        <createIndex indexName="ENTITY_CATEGORY_DENYLIST_IDX_FED_ID" tableName="ENTITY_CATEGORY_DENYLIST">
            <column name="FEDERATION_ID" type="VARCHAR(36)"/>
        </createIndex>

        <createIndex indexName="ENTITYID_ALLOWLIST_IDX_FED_ID" tableName="ENTITYID_ALLOWLIST">
            <column name="FEDERATION_ID" type="VARCHAR(36)"/>
        </createIndex>

        <createIndex indexName="ENTITYID_DENYLIST_IDX_FED_ID" tableName="ENTITYID_DENYLIST">
            <column name="FEDERATION_ID" type="VARCHAR(36)"/>
        </createIndex>

        <createIndex indexName="REGISTRATION_AUTHORITY_ALLOWLIST_IDX_FED_ID" tableName="REGISTRATION_AUTHORITY_ALLOWLIST">
            <column name="FEDERATION_ID" type="VARCHAR(36)"/>
        </createIndex>

        <createIndex indexName="REGISTRATION_AUTHORITY_DENYLIST_IDX_FED_ID" tableName="REGISTRATION_AUTHORITY_DENYLIST">
            <column name="FEDERATION_ID" type="VARCHAR(36)"/>
        </createIndex>

        <createIndex indexName="FEDERATION_MAPPER_CONFIG_IDX_FED_MAP_ID" tableName="FEDERATION_MAPPER_CONFIG">
            <column name="FEDERATION_MAPPER_ID" type="VARCHAR(36)"/>
        </createIndex>

        <createIndex indexName="IDENTITY_PROVIDER_MAPPER_IDX_ALIAS" tableName="IDENTITY_PROVIDER_MAPPER">
            <column name="IDP_ALIAS" type="VARCHAR(255)"/>
        </createIndex>

    </changeSet>


</databaseChangeLog>