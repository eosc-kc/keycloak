<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- join group request -->
    <changeSet author="cgeorgilakis" id="16.0.0-JOIN_GROUP_REQUEST">

        <createTable tableName="USER_GROUP_MEMBERSHIP_REQUEST">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="REALM_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="GROUP_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="STATUS" type="VARCHAR(36)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="REASON" type="VARCHAR(4000)"/>
            <column name="VIEWER_ID" type="VARCHAR(36)"/>

        </createTable>
        <addPrimaryKey columnNames="ID" constraintName="USER_GROUP_MEMBERSHIP_REQUEST_PK" tableName="USER_GROUP_MEMBERSHIP_REQUEST"/>
        <addForeignKeyConstraint baseColumnNames="REALM_ID" baseTableName="USER_GROUP_MEMBERSHIP_REQUEST" constraintName="USER_GROUP_MEMBERSHIP_REQUEST_FK" referencedColumnNames="ID" referencedTableName="REALM"/>

    </changeSet>

</databaseChangeLog>