<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="cgeorgilakis@grnet.gr" id="9.0.1-federation">
    	<createTable tableName="FEDERATION">
             <column name="INTERNAL_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="URL" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ALIAS" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DISPLAY_NAME" type="VARCHAR(255)">
            </column>
            <column name="PROVIDER_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="UPDATE_FREQUENCY_IN_MINS" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="VALID_UNTIL_TIMESTAMP" type="BIGINT">
            </column>
            <column name="LAST_METADATA_REFRESH_TIMESTAMP" type="BIGINT">
            </column>
            <column name="REALM_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="FEDERATION_SKIP_ENTITIES">
            <column name="FEDERATION_ID" type="VARCHAR(36)">
                <constraints nullable="false" />
            </column>
            <column name="VALUE" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
        
        <createTable tableName="FEDERATION_IDPS">
            <column name="FEDERATION_ID" type="VARCHAR(36)">
                <constraints nullable="false" />
            </column>
            <column name="IDENTITYPROVIDER_ID" type="VARCHAR(36)">
                <constraints nullable="false" />
            </column>
        </createTable>
        
         <createTable tableName="FEDERATION_CONFIG">
            <column name="FEDERATION_ID" type="VARCHAR(36)">
                <constraints nullable="false" />
            </column>
            <column name="VALUE" type="CLOB" />
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey columnNames="INTERNAL_ID" constraintName="FEDERATION_ID_CONSTRAINT" tableName="FEDERATION"/>
        <addPrimaryKey columnNames="FEDERATION_ID, VALUE" constraintName="CONSTRAINT_FEDERATION_SKIP_ENTITIES" tableName="FEDERATION_SKIP_ENTITIES" />
        <addPrimaryKey columnNames="FEDERATION_ID, NAME" constraintName="CONSTRAINT_FEDERATION_CONFIG" tableName="FEDERATION_CONFIG" />
        <addForeignKeyConstraint baseColumnNames="FEDERATION_ID" baseTableName="FEDERATION_SKIP_ENTITIES" constraintName="FEDERATION_SKIP_ENTITIES_FOREIGN_KEY" referencedColumnNames="INTERNAL_ID" referencedTableName="FEDERATION" />
        <addForeignKeyConstraint baseColumnNames="REALM_ID" baseTableName="FEDERATION" constraintName="REALM_FEDERATION_FOREIGN_KEY" referencedColumnNames="ID" referencedTableName="REALM" />
		<addForeignKeyConstraint baseColumnNames="FEDERATION_ID" baseTableName="FEDERATION_IDPS" constraintName="IDENTITYPROVIDER_TO_FEDERATION_FOREIGN_KEY" referencedColumnNames="INTERNAL_ID" referencedTableName="FEDERATION" />
		<addForeignKeyConstraint baseColumnNames="IDENTITYPROVIDER_ID" baseTableName="FEDERATION_IDPS" constraintName="FEDERATION_TO_IDENTITYPROVIDER_FOREIGN_KEY" referencedColumnNames="INTERNAL_ID" referencedTableName="IDENTITY_PROVIDER" />
   		 <addForeignKeyConstraint baseColumnNames="FEDERATION_ID" baseTableName="FEDERATION_CONFIG" constraintName="UK_FEDERATION_FK" referencedColumnNames="INTERNAL_ID" referencedTableName="FEDERATION" />
   		<addUniqueConstraint columnNames="ALIAS, REALM_ID" constraintName="UK_FEDERATION_UNIQUE_ALIAS" tableName="FEDERATION"/>
        <addUniqueConstraint columnNames="URL,REALM_ID" constraintName="UK_FEDERATION_UNIQUE_URL" tableName="FEDERATION"/>
    </changeSet>

</databaseChangeLog>